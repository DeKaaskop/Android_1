<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity" >

    <EditText
        android:id="@+id/post_edittext_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_edittext_title"
        android:layout_below="@+id/post_edittext_title"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:hint="@string/post_edittext_description" />

    <ImageView
        android:id="@+id/post_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_edittext_description"
        android:layout_below="@+id/post_edittext_description"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/post_iv_contentdescription"
        android:minWidth="300px"
        android:src="@drawable/photo_overlay" />

    <Button
        android:id="@+id/btn_newpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:enabled="true"
        android:text="@string/btn_newpost_title" />

    <EditText
        android:id="@+id/post_edittext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="8"
        android:hint="@string/post_edittext_title" />

</RelativeLayout>
