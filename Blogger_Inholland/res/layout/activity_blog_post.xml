<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="20dip"
    tools:context=".BlogActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/blogpost_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/blogpost_textview_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_weight=".8" />

            <TextView
                android:id="@+id/blogpost_textview_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_weight=".2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/blogpost_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/blogpost_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dip"
            android:paddingRight="10dip"
            android:paddingTop="25dip" />
    </LinearLayout>

</ScrollView>